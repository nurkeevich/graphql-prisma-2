generator client {
  provider = "prisma-client-js"
}

datasource postgresql {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int     @default(autoincrement()) @id
  authorId  Int?
  content   String?
  published Boolean @default(false)
  title     String
  user      User?   @relation(fields: [authorId], references: [id])
}

model User {
  id       Int     @default(autoincrement()) @id
  email    String  @unique
  password String
  name     String?
  posts    Post[]
}
